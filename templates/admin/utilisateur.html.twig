{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}
    <h2 style="color:#001A33;">
        {% if ModeForm %}
            Ajouter Utilisateur
        {% else %}
            Modifier utilisateur
        {% endif %}
    </h2>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Home</a>
        </li>
        <li class="breadcrumb-item">Inscription</li>
    </ol>
    {{ form_start(formUser) }}
    {{ form_row(formUser.Nom, {'attr' : {'placeholder' : 'Ecrire votre Nom ...'}, 'label' : 'Nom'}) }}
    {{ form_row(formUser.Prenom, {'attr' : {'placeholder' : 'Ecrire votre Prénom ...'}, 'label' : 'Prénom'}) }}
    {{ form_row(formUser.email, {'attr' : {'placeholder' : 'Ecrire votre Email ...'}, 'label' : 'Email'}) }}
    {{ form_row(formUser.Cin, {'attr' : {'placeholder' : 'Ecrire votre Cin ...'}, 'label' : 'Cin'}) }}
    {{ form_row(formUser.Qualification, {'attr' : {'placeholder' : 'Ecrire votre Qualification ...'}, 'label' : 'Qualification'}) }}
    {{ form_row(formUser.Entreprise, {'attr' : {'placeholder' : 'Ecrire votre Entreprise ...'}, 'label' : 'Entreprise'}) }}
    {{ form_row(formUser.password, {'attr' : {'placeholder' : ' mot de passe ...'}, 'label' : 'Mot de passe'}) }}
    {{ form_row(formUser.ConfirmPassword, {'attr' : {'placeholder' : 'Répetez votre mot de passe'}, 'label' : 'Confirmation du mot de passe'}) }}
    <button class="btn btn-success" style="background-color: #2C3E50 " type="submit">Enregistrer</button>
    {{ form_end(formUser) }}
    <br>
{% endblock %}
